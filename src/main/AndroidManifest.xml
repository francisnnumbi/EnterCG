<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="fnn.smirl.cardgame" 
	xmlns:tools="http://schemas.android.com/tools">
	
	
	<uses-sdk tools:overrideLibrary="android.support.v7.gridlayout" />
	<uses-permission 
		android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/cards_logo"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name=".MainActivity"
			android:screenOrientation="portrait"
			android:configChanges=
			"orientation|keyboardHidden"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".subactivity.GameActivity"
			android:screenOrientation="portrait"
			android:configChanges=
			"orientation|keyboardHidden"
			android:label="@string/app_name" />
		<activity
			android:name=".subactivity.OptionActivity"
			android:screenOrientation="portrait"
			android:configChanges=
			"orientation"
			android:label="@string/app_name" />
		<activity
			android:name=".subactivity.StatsActivity"
			android:screenOrientation="portrait"
			android:configChanges=
			"orientation"
			android:label="@string/app_name" />
		<uses-permission
			android:name="android.permission.READ_CONTACTS" />
	</application>

</manifest>
